<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.changbi.admin.mapper.mysql.UserRepository">

    <select id="getUserAccount" resultType="User">
        SELECT * FROM user
        WHERE user_id = #{userId}
    </select>

    <insert id="signUpUser" parameterType="User">
        INSERT INTO user (
              user_id,
              user_pwd,
              user_email,
              reg_date,
              mod_date
              )
        VALUE (
            #{userId},
            #{userPwd},
            #{userEmail},
            now(),
            now()
        )
    </insert>

</mapper>